---

<div class="rounded-lg bg-zinc-800 hover:bg-zinc-700 py-1">
  <fieldset class="list-none flex space-x-2 place-items-center h-full px-2">
    <label
      class:list={[
        "p-1",
        "rounded-lg",
        "text-zinc-500",
        "hover:text-zinc-200",
        "hover:bg-zinc-400",
        "has-[:checked]:bg-zinc-200",
        "has-[:checked]:text-zinc-700",
      ]}
    >
      <input
        id="system-theme"
        type="radio"
        name="theme"
        value="system"
        class="hidden"
        checked
      />
      <span class="sr-only">System Theme</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25"
        ></path>
      </svg>
    </label>

    <label
      class:list={[
        "p-1",
        "rounded-lg",
        "text-zinc-500",
        "hover:text-zinc-200",
        "hover:bg-zinc-400",
        "has-[:checked]:bg-zinc-200",
        "has-[:checked]:text-zinc-700",
      ]}
    >
      <input
        id="light-theme"
        type="radio"
        name="theme"
        value="light"
        class="hidden"
      />
      <span class="sr-only">Light Theme</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
        ></path>
      </svg>
    </label>

    <label
      class:list={[
        "p-1",
        "rounded-lg",
        "text-zinc-500",
        "hover:text-zinc-200",
        "hover:bg-zinc-400",
        "has-[:checked]:bg-zinc-200",
        "has-[:checked]:text-zinc-700",
      ]}
    >
      <input
        id="dark-theme"
        type="radio"
        name="theme"
        value="dark"
        class="hidden"
      />
      <span class="sr-only">Dark Theme</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
        ></path>
      </svg>
    </label>
  </fieldset>
</div>

<script>
  const htmlElement = document.querySelector("html");
  const themeSystem = document.querySelector<HTMLInputElement>("#system-theme");
  const themeLight = document.querySelector<HTMLInputElement>("#light-theme");
  const themeDark = document.querySelector<HTMLInputElement>("#dark-theme");

  themeSystem?.addEventListener("change", () => {
    if (themeSystem?.checked) {
      htmlElement?.classList.remove("light", "dark");
    }
  });
  themeLight?.addEventListener("change", () => {
    if (themeLight?.checked) {
      htmlElement?.classList.add("light");
      htmlElement?.classList.remove("dark");
    }
  });
  themeDark?.addEventListener("change", () => {
    if (themeDark?.checked) {
      htmlElement?.classList.add("dark");
      htmlElement?.classList.remove("light");
    }
  });
</script>
