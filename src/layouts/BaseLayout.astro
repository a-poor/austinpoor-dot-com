            }

            /* #bg-noise {
                background-image: url(/images/noise.png);
                opacity: 0.3;
                mix-blend-mode: multiply;
            } */
        </style>

        {/* Only set up Plausible Analytics if running in production */}
        {isProd && (
            <script
                is:inline 
                defer 
                id="plausible-script"
                data-domain="austinpoor.com"
                src="/plaus/js/script.outbound-links.tagged-events.js"
                data-api="/plaus/api/event"
            >
            </script>
            <script is:inline>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>
        )}
	</head>
	<body class="h-screen">
        <div id="body-inner" class="h-screen overflow-scroll">
            <div class="relative min-h-full">

                <div class="bg" id="bg-noise"/>
                <div class="bg" id="bg-grid"/>
                
                <Nav activeTab={activeTab}/>
                
                <header>
                    <slot name="header" />
                </header>
                
                <main>
                    <slot />
                </main>
                
                <BackToTop />
                
                <Footer>
                    <slot name="footer" />
                </Footer>
            </div>
        </div>
        
        <SearchModal />
	</body>
</html>
