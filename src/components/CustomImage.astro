---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
}

const { src, alt, width, height, className } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp,wemb}"
);
console.log(Object.keys(images));
if (!images[src]) {
  throw new Error(
    `"${src}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
}
---

<Image
  src={images[src]()}
  alt={alt}
  width={width}
  height={height}
  class={className}
  decoding="async"
  loading="lazy"
/>
