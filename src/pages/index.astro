---
import { getCollection } from 'astro:content';
import Layout from '../layouts/BaseLayout.astro';
import SiteMeta from '../components/SiteMeta.astro';

const blogPosts = await getCollection('blog')
	.then(bps => (bps
		.filter(b => !b.data.isDraft)
		.sort((a, b) => {
			if (a.data.publishDate < b.data.publishDate) return -1;
			if (a.data.publishDate > b.data.publishDate) return 1;
			return 0;
		})
		.reverse()
		.slice(0, 3)
	));

const projects = await getCollection('projects')
	.then(ps => (ps
		.filter(p => !p.data.hide)
		.sort((a, b) => a.data.order - b.data.order)
		.slice(0, 3)
	));

function formatDate(d: Date): string {
  const year = d.getFullYear();
  const month = String(d.getMonth()).padStart(2,'0');
  const day = String(d.getDate()).padStart(2,'0');
  return `${year}-${month}-${day}`;
}

const pageTitle = "";
const pageDescription = "Austin Poor's personal website. Hi, my name is Austin and I'm a full-stack developer living in Los Angeles, CA. Check out my blog, some projects, learn more about me, and find out how to reach me!";

